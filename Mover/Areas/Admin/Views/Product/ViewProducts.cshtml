@using Mover.Areas.Admin.ViewModel.Product
@model List<ProductViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "View Products";
}
<style>
    :root {
        --primary-color: #333;
        --accent-color: #f44336;
        --gray-light: #f5f5f5;
    }

    /* Products Section */
    .product-card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 30px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .product-image {
        height: 300px;
        object-fit: cover;
    }

    .product-details {
        padding: 15px;
    }

    .product-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .product-price {
        color: var(--accent-color);
        font-weight: 600;
        font-size: 18px;
    }

    .original-price {
        text-decoration: line-through;
        color: #999;
        margin-right: 10px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {

        .category-card {
            height: 150px;
        }

        .product-image {
            height: 200px;
        }
    }
</style>
<h3>Product List</h3>

<div class="row">
    <!-- Sidebar for Categories -->
    <div class="col-md-3">
        <h5>Filter by Category</h5>
        <form id="categoryFilterForm">
            @foreach (var category in ViewBag.Categories)
            {
                bool isChecked = ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId == category.Id;
                <div class="form-check">
                    <input class="form-check-input category-checkbox" type="checkbox" value="@category.Id" id="category_@category.Id" @(isChecked ? "checked" : "")>
                    <label class="form-check-label" for="category_@category.Id">@category.Name</label>
                </div>
            }
        </form>
    </div>

    <!-- Product List -->

    <div class="container">
        <h3 class="mb-4 text-center">Our Products</h3>
        <div class="row" id="productList">

            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="product-card">
                        <img src="@Url.Content($"~/{product.ImageUrls.FirstOrDefault()}")" class="product-image" alt="@product.ProductName">
                        <div class="product-details">
                            <h3 class="product-title">@product.ProductName</h3>
                            <h4 class="product-title">@product.Description</h4>
                            <div class="d-flex align-items-center">
                                <span class="original-price">$@product.OriginalPrice</span>
                                <span class="product-price">$@product.DiscountedPrice</span>
                            </div>Home/Details
                            <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-dark w-100 mt-3">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $(".category-checkbox").on("change", function () {
                var selectedCategories = [];
                $(".category-checkbox:checked").each(function () {
                    selectedCategories.push($(this).val());
                });
                console.log("CatId", selectedCategories);
                // Make AJAX call to filter products
                $.ajax({
                    url: "/admin/product/getproductsbycategories",
                    type: "GET",
                    data: { categoryIds: selectedCategories },
                    dataType: "json",
                    traditional: true,
                    success: function (data) {
                        $("#productList").empty(); // Clear current product list

                        if (data.length > 0) {
                            $.each(data, function (index, product) {
                                let imageUrl = `/${product.imageUrl}`;
                                $("#productList").append(`
                                <div class="col-lg-3 col-md-4 col-6">
                                    <div class="product-card">
                                        <img src="${imageUrl}" class="product-image" alt="${product.productName}">
                                        <div class="product-details">
                                            <h3 class="product-title">${product.productName}</h3>
                                            <h4 class="product-title">${product.description}</h4>
                                            <div class="d-flex align-items-center">
                                                <span class="original-price">$${product.originalPrice}</span>
                                                <span class="product-price">$${product.discountedPrice}</span>
                                            </div>
                                            <a href="/Admin/Product/Details/${product.productId}" class="btn btn-outline-dark w-100 mt-3">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            `);
                            });
                        } else {
                            if (data.message === "No catergory") {
                                window.location.href = '/admin/product/viewproducts'
                            }
                            else {
                                $("#productList").html("<p>No products found.</p>");

                            }
                        }
                    },
                    error: function () {
                        toastr.error("Error fetching products. Please try again.");
                    }
                });
            });
        });
    </script>

}