@using Mover.Areas.Admin.ViewModel.Category
@model List<CategoryViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a href="/admin/category/create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i>&nbsp Create New Category
            </a>

        </div>
        <hr />
    </div>
    <table class="table table-bordered table-striped table-hover " style="width:100%">
        <thead>
            <tr>
                
                <th>
                    Category Name
                </th>
                <th>
                    Created At
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                   
                    <td width="40%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.CreatedOn
                    </td>
                    <td style="display:flex;">
                        <div class="w-50 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>&nbsp Edit</a>
                        </div>
                        <div class="w-50 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-pencil-square"></i>&nbsp Delete</a>
                        </div>

                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>
