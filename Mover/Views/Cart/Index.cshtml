@using Mover.ViewModel.Carts
@model List<CartViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Shopping Cart";
}
<div>
    <form method="post">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <div class="row">
                    <div class="col-6 pt-2">
                        <i class="fa fa-shopping-cart"></i> Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @if (Model.Count <= 0)
                {
                    <span>Cart is Empty. Please continue shopping.</span>
                }
                else
                {


                    @foreach (var item in Model)
                    {
                        <div class="row mb-3">
                            <div class="col-12 col-lg-1 text-center py-2 d-none d-lg-block">
                                <img src="~/@item.ImageUrls.FirstOrDefault()" class="rounded" width="100%" alt="Product Image">
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5><strong>@item.ProductName</strong></h5>
                                <p>@item.Description</p>
                            </div>
                            <div class="col-12 col-lg-5 row text-center">
                                <div class="col-4 text-md-right pt-4">
                                    <h6>
                                        <strong>@item.ProductPrice <span class="text-muted">x</span> @item.Quantity</strong>
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="btn-group" role="group">
                                        <a asp-action="incrementitemcount" asp-route-id="@item.CartId" class="btn btn-primary btn-sm">
                                            <i class="fas fa-plus-square"></i>
                                        </a>
                                        <a asp-action="decrementitemcount" asp-route-id="@item.CartId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-minus-square"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-2 col-sm-4 col-lg-2 pt-2 text-right">
                                    <a asp-action="remove" asp-route-cartId="@item.CartId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }


                    <div class="card-footer">
                        <div class="row">
                            <div class="col-lg-8 text-end">
                                <h5>
                                    <strong>Total Price:</strong>
                                </h5>
                            </div>
                            <div class="col-lg-4 text-end">
                                <h5>
                                    <strong>@(ViewBag.TotalPrice ?? 0)</strong>
                                </h5>
                            </div>
                            <div class="col-lg-4 offset-lg-8 col-md-6 offset-md-6 mt-3">
                                <a asp-action="Summary" class="btn btn-success form-control">Proceed to Summary</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
