@using Mover.Areas.Admin.ViewModel.Product
@model List<ProductViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

<div class="row pb-2">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row pt-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@product.ImageUrls.FirstOrDefault()" class="card-img-top-rounded" height="350px" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary"><b>@product.ProductName</b></p>
                                <p class="card-title h5 text-info"> <strike><b> @product.OriginalPrice</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As Low as: <b>$@product.DiscountPercentage</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <b>$@product.DiscountedPrice</b> </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary" style="width:100%;" asp-route-id="@product.ProductId">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }
</div>